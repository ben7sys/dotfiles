# Common environment variables for all systems

# Central environment for all shells
# Keep simple: put your personal settings here.

# Ensure user bin comes first if present
[ -d "$HOME/.local/bin" ] && PATH="$HOME/.local/bin:$PATH"

# SSH agent via systemd user socket
export SSH_AUTH_SOCK="${SSH_AUTH_SOCK:-$XDG_RUNTIME_DIR/ssh-agent.socket}"

# NPM global bin (if used)
export PATH="$HOME/.cache/npm-global/bin:$PATH"

# Locale and editor (set only if unset)
export LANG="${LANG:-de_DE.UTF-8}"
export LC_ALL="${LC_ALL:-de_DE.UTF-8}"
export EDITOR="${EDITOR:-vim}"

# Python environment variables
export PYTHONDONTWRITEBYTECODE=1
export PYTHONUNBUFFERED=1

# Node environment variables
export NODE_ENV="development"

# Java environment variables
#export JAVA_HOME="/usr/lib/jvm/default"

# Go environment variables
#export GOPATH="$HOME/go"
#export PATH="$PATH:$GOPATH/bin"

# Ruby environment variables
#export GEM_HOME="$HOME/.gem"
#export PATH="$PATH:$GEM_HOME/bin"

# Rust environment variables
#export CARGO_HOME="$HOME/.cargo"
#export PATH="$PATH:$CARGO_HOME/bin"

# Custom application settings
# export MY_APP_CONFIG="$HOME/.config/myapp/config.yml"

# Ollama (for Obsidian integration)
export OLLAMA_ORIGINS="app://obsidian.md*"

# GitHub (set in ~/.env_settings if needed)
# export GITHUB_USERNAME=your-github-username

# GTK Scale
export SWT_GTK3=0
export GDK_SCALE=1
export GDK_DPI_SCALE=0.9

# Storage / NAS
export STORAGE_IP="192.168.1.100"    # e.g., your NAS IP
export STORAGE_NAME="syno"           # e.g., syno, nas, storage
