#!/bin/sh
# POSIX profile: keep it simple and avoid duplication with Bash.
if [ -z "$BASH_VERSION" ]; then
  # Non-Bash shells: load common env (aliases/exports optional)
  for file in ~/.{env_common,exports}; do
    [ -r "$file" ] && [ -f "$file" ] && . "$file"
  done
  # System-specific (only for non-Bash here; Bash handles this in ~/.bashrc)
  [ -r "$HOME/.env_systemd" ] && [ -d /run/systemd/system ] && . "$HOME/.env_systemd"
  [ -r "$HOME/.env_kde" ] && [ -d "$HOME/.config/plasma-workspace" ] && . "$HOME/.env_kde"
fi

# For Bash login shells, include ~/.bashrc via ~/.bash_profile â†’ ~/.profile
[ -n "$BASH_VERSION" ] && [ -f "$HOME/.bashrc" ] && . "$HOME/.bashrc"
